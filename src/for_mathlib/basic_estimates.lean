    simp only [finset.mem_Icc, finset.mem_sigma, nat.succ_le_iff,
      nat.le_floor_iff (div_nonneg hy (nat.cast_nonneg _))] at hi,
    refine ‚ü®‚ü®mul_pos hi.1.1 hi.2.1, _‚ü©, hi.1.1, hi.2.1‚ü©,
    apply (le_div_iff' _).1 hi.2.2,
