lemma exp_sub_mul {x c : ‚Ñù} {hc : 0 ‚â§ c} : c - c * log c ‚â§ exp x - c * x :=
begin
  rcases eq_or_lt_of_le hc with rfl | hc,
  { simp [(exp_pos _).le] },
  suffices : exp (log c) - c * log c ‚â§ exp x - c * x,
